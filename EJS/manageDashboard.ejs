<!DOCTYPE html>
<html>
    <head>
        <title>Inventory Section</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Welcome to the IndoTechLogin admin webPage">
        <link rel="stylesheet" href="./css/main.css">
        <link rel="icon" href="./images/logo.jpeg">
    </head>
    <body>
        <!-- Import the header ejs file -->
        <%- include('header') %>
        <div class="admin-dashboard">
            <nav>
                <ul>
                    <li><a href="/admin">Dashboard</a></li>
                    <li><a href="/manageEmployee">Manage Employee</a></li>
                    <li><a href="/manageDashboard">Manage Dashboard</a></li>
                    <li><a href="/Review">Review Tasks</a></li>
                </ul>
            </nav>
        </div>
        <div class="logout-button">
            <h2>Welcome back <%= username %></h2>
            <a href="/logout"><button type="button">Logout</button></a>
        </div>
        <div class="admin-section-box">
            <div class="admin-section-list">
                <div class="header-timer">
                    <h1>MANAGE DASHBOARD</h1>
                    <p id="current-time"></p>
                </div>
            </div>
            <div class="assign-task-section">
                <h2 class="section-title">Assign Task to All Employees</h2>
                <form action="/assignTask" method="post" class="task-form">
                    <div class="form-group">
                        <label for="task-title"><strong>Task Title:</strong></label>
                        <input type="text" id="task-title" name="taskTitle" placeholder="Enter task title..." required>
                    </div>
                    <!-- Metal Fabrication -->
                    <fieldset>
                        <legend><strong>Metal Fabrication</strong></legend>
                        <div class="form-group">
                            <label for="metal-fabrication-time"><strong>Expected Time (hours):</strong></label>
                            <input type="number" id="metal-fabrication-time" name="metalFabricationTime" min="0" step="0.1" placeholder="e.g., 4.5" required>
                        </div>
                    </fieldset>
                    <!-- Paint -->
                    <fieldset>
                        <legend><strong>Paint</strong></legend>
                        <div class="form-group">
                            <label for="paint-time"><strong>Expected Time (hours):</strong></label>
                            <input type="number" id="paint-time" name="paintTime" min="0" step="0.1" placeholder="e.g., 3.0" required>
                        </div>
                    </fieldset>
                    <!-- Assembly -->
                    <fieldset>
                        <legend><strong>Assembly</strong></legend>
                        <div class="form-group">
                            <label for="assembly-time"><strong>Expected Time (hours):</strong></label>
                            <input type="number" id="assembly-time" name="assemblyTime" min="0" step="0.1" placeholder="e.g., 2.0" required>
                        </div>
                    </fieldset>
                    <!-- Shipping -->
                    <fieldset>
                        <legend><strong>Shipping</strong></legend>
                        <div class="form-group">
                            <label for="shipping-time"><strong>Expected Time (hours):</strong></label>
                            <input type="number" id="shipping-time" name="shippingTime" min="0" step="0.1" placeholder="e.g., 5.0" required>
                        </div>
                    </fieldset>
                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit" class="btn-submit">Assign Task</button>
                    </div>
                </form>
                <% if (successMessage) { %>
                    <div class="success-message"><%= successMessage %></div>
                <% } %>
            </div>
        </div>
        <script src="./js/timer.js"></script>
       <%- include('footer') %>
    </body>
</html>
